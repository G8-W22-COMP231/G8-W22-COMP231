                <Button x:Name="CancelEditIncomeBTM" Click="OnCancelIncomeBTNClick" Content="Cancel" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="30" Width="160" Margin="250,0,0,5"></Button>
            </Grid>
