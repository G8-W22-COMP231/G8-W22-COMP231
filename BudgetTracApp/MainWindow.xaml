<Window x:Class="BudgetTracApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetTracApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid x:Name="NavBar" HorizontalAlignment="Center" Height="50" VerticalAlignment="Top" Width="800">
            <Button Grid.Column="0" x:Name="HomeBTN" Click="OnHomeBTNClick" Content="Home" VerticalAlignment="Center" Height="40" Width="160" Margin="0,5,640,5"/>
            <Button Grid.Column="1" x:Name="IncomeBTN" Click="OnIncomeBTNClick" Content="Income" VerticalAlignment="Center" Height="40" Width="160" Margin="160,5,480,5"/>
            <Button Grid.Column="2" x:Name="ExpenseBTN" Click="OnExpensBTNClick" Content="Expense" VerticalAlignment="Center" Height="40" Width="160" Margin="320,5,320,5"/>
            <Button Grid.Column="3" x:Name="ReminderBTN" Click="OnReminderBTNClick" Content="Reminder" VerticalAlignment="Center" Height="40" Width="160" Margin="480,5,160,5"/>
            <Button Grid.Column="4" x:Name="AllBTN" Click="OnAllBTNClick" Content="All" VerticalAlignment="Center" Height="40" Width="160" Margin="640,5,0,5"/>
        </Grid>

        <Grid x:Name="HomeGrid" HorizontalAlignment="Center" Height="365" Width="790" Margin="0" VerticalAlignment="Bottom" Visibility="Visible">
            <TextBlock Grid.Row="0" x:Name="HomeHeaderTXT" HorizontalAlignment="Center" Height="40" TextWrapping="Wrap" Text="Home Page" VerticalAlignment="Top" Width="250" TextAlignment="Center" FontSize="20" FontWeight="Bold"/>

            <Grid Grid.Row="1" x:Name="HomePageGrid" HorizontalAlignment="Center" Height="320" VerticalAlignment="Bottom" Width="780" Margin="0,0,0,5">
                <TextBlock Text="Current Month Income" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="250" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="10,15,0,0"></TextBlock>
                <TextBlock Text="Current Month Expense" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="250" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="10,50,0,0"></TextBlock>
                <TextBlock Text="Current Month Saving" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="250" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="10,85,0,0"></TextBlock>



                <TextBlock x:Name="currentMonthIncomeTXT" Text="0.0" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="250" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="180,15,0,0"></TextBlock>
                <TextBlock x:Name="currentMonthExpenseTXT" Text="0.0" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="250" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="180,50,0,0"></TextBlock>
