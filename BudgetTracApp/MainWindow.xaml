                <TextBox x:Name="IncomeEditDescriptionTXT" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="250" FontSize="16" TextAlignment="Center" Margin="180,15,0,0"></TextBox>

                <TextBlock Text="Amount" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="150" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="10,50,0,0"></TextBlock>
