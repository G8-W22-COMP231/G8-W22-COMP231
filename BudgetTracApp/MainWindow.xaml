                <ComboBox x:Name="IncomeEditTypeCMB" SelectionChanged="OnIncomeEditTypeSelectionChange" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="250" FontSize="16" Margin="180,85,0,0">
                    <ComboBoxItem>Income</ComboBoxItem>
