                <TextBlock Text="Tax Percentage" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="150" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="10,155,0,0"></TextBlock>
                <TextBox x:Name="IncomeTaxAmountTXT" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="250" FontSize="16" TextAlignment="Center" Margin="180,155,0,0" IsReadOnly="False"></TextBox>

                <TextBlock Text="Date" HorizontalAlignment="Right" Height="30" VerticalAlignment="Top" Width="150" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="0,15,100,0"></TextBlock>
                <Calendar x:Name="IncomeDateCalander" SelectedDatesChanged="OnIncomeDateChange" SelectionMode="SingleDate" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,50,90,0">
                </Calendar>

                <Button x:Name="AddIncomeConfirmBTM" Click="OnAddIncomeConfirmBTNClick" Content="Add" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="30" Width="160" Margin="0,0,200,5"></Button>
                <Button x:Name="CancelIncomeBTM" Click="OnCancelIncomeBTNClick" Content="Cancel" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="30" Width="160" Margin="200,0,0,5"></Button>
            </Grid>

            <Grid Grid.Row="1" x:Name="EditIncomePageGrid" HorizontalAlignment="Center" Height="320" VerticalAlignment="Bottom" Width="780" Margin="0,0,0,5" Visibility="Hidden">
