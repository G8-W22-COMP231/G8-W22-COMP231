                <Button x:Name="EditIncomeBTM" Click="OnEditIncomeBTNClick" Content="Edit Selected Income" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="30" Width="160" Margin="0,0,0,5"></Button>
                <Button x:Name="DeleteIncomeBTM" Click="OnDeleteIncomeBTNClick" Content="Delete Selected Income" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="30" Width="160" Margin="400,0,0,5"></Button>
            </Grid>
            <Grid Grid.Row="1" x:Name="AddIncomePageGrid" HorizontalAlignment="Center" Height="320" VerticalAlignment="Bottom" Width="780" Margin="0,0,0,5" Visibility="Hidden">
                <DataGrid x:Name="AddIncomePage" HorizontalAlignment="Center" Height="275" VerticalAlignment="Top" Width="780" Margin="0,5,0,0"></DataGrid>
                
                <TextBlock Text="Description" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="150" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="10,15,0,0"></TextBlock>
                <TextBox x:Name="IncomeDescriptionTXT" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="250" FontSize="16" TextAlignment="Center" Margin="180,15,0,0"></TextBox>

                <TextBlock Text="Amount" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="150" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="10,50,0,0"></TextBlock>
                <TextBox x:Name="IncomeAmountTXT" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="250" FontSize="16" TextAlignment="Center" Margin="180,50,0,0"></TextBox>

                <TextBlock Text="Type" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="150" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="10,85,0,0"></TextBlock>
                <ComboBox x:Name="IncomeTypeCMB" SelectionChanged="OnIncomeTypeSelectionChange" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="250" FontSize="16" Margin="180,85,0,0">
                    <ComboBoxItem>Income</ComboBoxItem>
                    <ComboBoxItem>Saving</ComboBoxItem>
                    <ComboBoxItem>Gift</ComboBoxItem>
                </ComboBox>

                <TextBlock Text="Taxable" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Width="150" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="10,120,0,0"></TextBlock>
                <RadioButton x:Name="IncomeRadioYesBtn" GroupName="IncomeTaxableRDB" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="50" Margin="180,125,0,0" Checked="IncomeOnRadioButtonChange">Yes</RadioButton>
